<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@android:color/black"
                android:endColor="@android:color/black"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@android:color/black" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#CC8035e3"
                android:startColor="@android:color/black"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#CC8035e3" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#CC8035e3"
                android:startColor="@android:color/black"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@android:color/black" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>